{
  "manifest_version": 3,
  "name": "ConsentChain",
  "version": "1.0",
  "description": "Your Privacy, On-Chain. Automated consent management and cookie control.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "notifications",
    "alarms",
    "cookies"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*",
        "http://localhost:8000/*",
        "http://127.0.0.1:8000/*",
        "http://localhost:8080/*",
        "http://127.0.0.1:8080/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup/index.html",
    "default_title": "ConsentChain",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "64": "icons/icon64.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "utils/ethers.js",
        "utils/ethers-v6.js",
        "utils/storage.js",
        "utils/wallet-manager.js",
        "popup/index.html",
        "dashboard/index.html"
      ],
      "matches": [
        "<all_urls>",
        "http://localhost:8080/*"
      ],
      "use_dynamic_url": true
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}